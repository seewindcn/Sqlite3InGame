# Type "make help" for usage help

ifndef config
  config=debug\ aes128
endif
export config

PROJECTS := sqlite3lib sqlite3dll sqlite3shell

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

sqlite3lib: 
	@echo "==== Building sqlite3lib ($(config)) ===="
	@${MAKE} --no-print-directory -C build/sqlite3lib -f Makefile

sqlite3dll: 
	@echo "==== Building sqlite3dll ($(config)) ===="
	@${MAKE} --no-print-directory -C build/sqlite3dll -f Makefile

sqlite3shell: sqlite3lib
	@echo "==== Building sqlite3shell ($(config)) ===="
	@${MAKE} --no-print-directory -C build/sqlite3shell -f Makefile

clean:
	@${MAKE} --no-print-directory -C build/sqlite3lib -f Makefile clean
	@${MAKE} --no-print-directory -C build/sqlite3dll -f Makefile clean
	@${MAKE} --no-print-directory -C build/sqlite3shell -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug aes128"
	@echo "   release aes128"
	@echo "   debug aes256"
	@echo "   release aes256"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   sqlite3lib"
	@echo "   sqlite3dll"
	@echo "   sqlite3shell"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
